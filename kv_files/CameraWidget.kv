<CameraWidget>:
    Camera:
        id: camera
        play: True
        height: root.width
        width: 4 * (root.height / 5)
        allow_stretch: True
        keep_ratio: False
        center: root.center
        canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: self.center
        canvas.after:
            PopMatrix
    
    FloatLayout:
        id:  buttons
        width: root.width
        height: root.height / 10
        
        Button:
            size_hint: None, None
            size: 150, 70
            center_x: buttons.center_x
            center_y: buttons.center_y
            text: "capture"
            on_press: root.capture()
    
        Button:
            size_hint: None, None
            size: 150, 70
            right: buttons.right
            center_y: buttons.center_y
            text: "gallery"
            on_press: root.switch_to_gallery()