#:kivy 2.3.0

<CameraWidget>:
    Camera:
        id: camera
        play: True
        height: root.width
        width: 4 * (root.height / 5)
        center: root.center
        canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: self.center
        canvas.after:
            PopMatrix
    
    FloatLayout:
        width: root.width
        
        Button:
            size_hint: None, None
            size: 150, 70
            pos_hint: {"center_x": 0.5, "y": 0.05}
            text: "capture"
            on_press: root.capture()
    
        Button:
            size_hint: None, None
            size: 150, 70
            pos_hint: {"right": 1, "y": 0.05}
            text: "galery"