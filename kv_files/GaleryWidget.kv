<GaleryWidget>:
    BoxLayout:
        top: root.top
        width: root.width
        height: 100

        Button:
            text: "<"
            size_hint_x: None
            width: 100
            font_size: 80
            background_normal: ""
            background_color: 1, 1, 1, 0
            on_press: app.root.current = "camera"

    ScrollView:
        width: root.width
        height: root.height - 100

        BoxLayout:
            id: container
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height