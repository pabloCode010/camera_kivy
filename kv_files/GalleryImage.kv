<GalleryImage>:
    size_hint: (1 / self.parent.cols if self.parent else 1, None)
    height: self.width
    allow_stretch: True
    keep_ratio: False
    on_press: self.show_image()

    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle:
            pos: self.pos
            size: self.size